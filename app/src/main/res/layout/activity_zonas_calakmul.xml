<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_zona_calakmul">

    <TextView
        android:id="@+id/txt_Titulo_Zonas_Arquelogicas"
        style="@style/toolbar_style_title_text_zonas_calakmul"
        android:background="#984BF1"
        android:text="ZONAS ARQUEOLOGICAS DE CALAKMUL"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_Zonas_Calakmul_Anim"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_zonas_calakmul_anim"
        android:layout_below="@id/txt_Titulo_Zonas_Arquelogicas"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_Zona_Becan"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/lottie_Zonas_Calakmul_Anim">

        <RelativeLayout
            android:id="@+id/rtl_Zona_Becan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_option_becan_zonas_calakmul">

            <TextView
                android:id="@+id/txt_Zona_Becan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="Zona Arqueologica de becan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_Descripcion_Zona_Becan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GG8M+MM Becán, Campeche, México"
                android:layout_below="@id/txt_Zona_Becan"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_Zona_Xpuhil"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/card_Zona_Becan">

        <RelativeLayout
            android:id="@+id/rtl_Zona_Xpuhil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_option_xpuhil_zonas_calakmul">

            <TextView
                android:id="@+id/txt_Zona_Xpuhil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/boogaloo"
                android:text="Zona Arqueológica Xpuhil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_Descripcion_Zona_Xpuhil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GH5X+JJ Xpujil, Campeche, México"
                android:layout_below="@id/txt_Zona_Xpuhil"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnIrPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adquirir zonas"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>