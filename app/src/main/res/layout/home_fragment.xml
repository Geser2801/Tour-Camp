<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_Titulo_Tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tour Camp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/img_Logo_Tour"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_splash_logo"
        android:layout_marginTop="15dp"
        android:layout_below="@id/txt_Titulo_Tour"/>

    <GridLayout
        android:id="@+id/grd_Contenedor_Home"
        android:layout_width="356dp"
        android:layout_height="356dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="64dp"
        android:columnCount="2"
        android:rowCount="2"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Zonas_Calakmul"
            android:layout_width="133dp"
            android:layout_height="135dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/lnr_Zonas_Calakmul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Zonas_Calakmul"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/pir" />

                <TextView
                    android:id="@+id/txt_Zonas_Calakmul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Calakmul"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Metodo_Pago"
            android:layout_width="133dp"
            android:layout_height="135dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/lnr_Metodo_Pago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Metodo_Pago"
                    android:layout_width="93dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/ami" />

                <TextView
                    android:id="@+id/txt_Metodo_Pago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Forma de pago"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_Juegos"
            android:layout_width="133dp"
            android:layout_height="135dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/lnr_Juegos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Juegos"
                    android:layout_width="81dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:background="@drawable/game" />

                <TextView
                    android:id="@+id/txt_Juegos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Juegos"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
