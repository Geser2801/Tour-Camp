    <Button
        android:id="@+id/btn_Guardar_Datos_User"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_btn_guarda_perfil_user"
        app:backgroundTint="@null"
        android:text="Guardar cambios"
        android:background="@drawable/btn_guardar_session_perfil_user"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_Cerrar_Sesion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:text="Cerrar SesiÃ³n"
        android:drawableStart="@drawable/ic_btn_cerrar_session_perfil_user"
        android:background="@drawable/btn_cerrar_session_perfil_user"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>